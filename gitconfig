[difftool]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
    keepBackup = false
[credential]
	helper = osxkeychain

[branch]
    autoSetupRebase = remote
[push]
	default = upstream
[http]
	postBuffer = 157286400
[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[commit]
	template = ~/.dotfiles/stCommitMsg
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	pdiff = difftool --tool=tkdiff --no-prompt
	ppull = pull --rebase --prune
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=iso
	br-ext = "!f() { git checkout -b \"$1\" && git push -u origin \"$1\"; }; f"
	dlog = !bash ~/bin/gitdlog.sh

